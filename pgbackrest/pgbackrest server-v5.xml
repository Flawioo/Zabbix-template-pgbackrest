<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2022-02-17T19:22:43</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>postgres pgbackrest backup server</template>
            <name>postgres pgbackrest backup server</name>
            <description>monitoring of pgbackrest backups. Data is sent using zabbix_sender and preformatted using jq&#13;
crontab of the pgbackrest user on the repo host[s]:&#13;
15 *  * * * $HOME/bin/zabbix_pgbackrest.sh &gt;&gt;/var/log/pgbackrest/zabbix_pgbackrest.sh.log 2&gt;&amp;1&#13;
&#13;
The items wal,(min|max) items are only enabled for the full backups.</description>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>backup</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>pgbackrest.data</name>
                    <type>TRAP</type>
                    <key>pgbackrest.data</key>
                    <delay>0</delay>
                    <history>0</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>The data where the items depend on</description>
                    <applications>
                        <application>
                            <name>backup</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>pgbackrest.json</name>
                    <type>TRAP</type>
                    <key>pgbackrest.json</key>
                    <delay>0</delay>
                    <history>0</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>only for lld, contains list of names and type&#13;
The lld rule depends on this</description>
                    <applications>
                        <application>
                            <name>backup</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>pgbackrest[count]</name>
                    <type>DEPENDENT</type>
                    <key>pgbackrest[count]</key>
                    <delay>0</delay>
                    <history>8d</history>
                    <description># of  backups by pgbackrest on this host (dbx, full + incr -&gt; 2)</description>
                    <applications>
                        <application>
                            <name>backup</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.length()</params>
                        </step>
                        <step>
                            <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                            <params>1d</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>pgbackrest.json</key>
                    </master_item>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>pgbackrest.lld</name>
                    <type>DEPENDENT</type>
                    <key>pgbackrest.lld</key>
                    <delay>0</delay>
                    <item_prototypes>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},age]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},age]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <units>s</units>
                            <description>age of last (#TYPE} backup in seconds</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].timestamp.age.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                            </preprocessing>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()} &gt; {$MAX_BKUP_AGE:&quot;{#TYPE}&quot;}</expression>
                                    <name>last {#TYPE} backup of {#TENANT}, {#NAME} older than {$MAX_BKUP_AGE:&quot;{#TYPE}&quot;}</name>
                                    <priority>WARNING</priority>
                                    <description>expecting a regular pattern</description>
                                    <dependencies>
                                        <dependency>
                                            <name>no monitoring data for {#TENANT}, {#NAME}-{#TYPE}</name>
                                            <expression>{postgres pgbackrest backup server:pgbackrest[{#TENANT},{#NAME},{#TYPE},age].nodata(4h)}=1</expression>
                                        </dependency>
                                    </dependencies>
                                    <tags>
                                        <tag>
                                            <tag>backup</tag>
                                            <value>{#NAME}-{#TYPE}</value>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{nodata(4h)}=1</expression>
                                    <name>no monitoring data for {#TENANT}, {#NAME}-{#TYPE}</name>
                                    <priority>AVERAGE</priority>
                                    <description>age is always new and should always be received. Could be a monitoring script problem.</description>
                                    <tags>
                                        <tag>
                                            <tag>backup</tag>
                                            <value>{#NAME}-{#TYPE}</value>
                                        </tag>
                                        <tag>
                                            <tag>monitoring</tag>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},db,delta]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},db,delta]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <units>B</units>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].info.delta.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},db,size]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},db,size]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <units>B</units>
                            <description>dbsize as it runs</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].info.size.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},repo,delta]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},repo,delta]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <units>B</units>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].info.repository.delta.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},repo,size]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},repo,size]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <units>B</units>
                            <description>size of db in the repository</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].info.repository.size.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},start]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},start]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <units>unixtime</units>
                            <description>The time this backup started</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].timestamp.start.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},status]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},status]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>pgbackrest_status</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].error.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>STR_REPLACE</type>
                                    <params>false
0</params>
                                </step>
                                <step>
                                    <type>STR_REPLACE</type>
                                    <params>true
1</params>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;&gt;0</expression>
                                    <name>backup failed {#TENANT}, {#NAME}-{#TYPE}</name>
                                    <priority>WARNING</priority>
                                    <tags>
                                        <tag>
                                            <tag>backup</tag>
                                            <value>{#TENANT}- {#NAME}-{#TYPE}</value>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},stop]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},stop]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <units>unixtime</units>
                            <description>The time this backup ended</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].timestamp.stop.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},version]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},version]</key>
                            <delay>0</delay>
                            <history>8d</history>
                            <trends>0</trends>
                            <value_type>CHAR</value_type>
                            <description>version of pgbackrest used for this backup</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].backrest.version.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},wal,max]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},wal,max]</key>
                            <delay>0</delay>
                            <history>15d</history>
                            <trends>0</trends>
                            <status>DISABLED</status>
                            <value_type>CHAR</value_type>
                            <description>Most recent archived log in repo available, only enabled for full (discovery override)</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].max.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED</type>
                                    <params/>
                                </step>
                            </preprocessing>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{nodata({$ARCHIVER_LATE})}=1</expression>
                                    <name>no archives received for {#TENANT}, {#NAME} - {#TYPE}</name>
                                    <status>DISABLED</status>
                                    <priority>WARNING</priority>
                                    <description>archives are for all backuptypes so check only full,arl,max&#13;
the arl items are disabled and only enabled for full,arl,(min|max)</description>
                                    <dependencies>
                                        <dependency>
                                            <name>no monitoring data for {#TENANT}, {#NAME}-{#TYPE}</name>
                                            <expression>{postgres pgbackrest backup server:pgbackrest[{#TENANT},{#NAME},{#TYPE},age].nodata(4h)}=1</expression>
                                        </dependency>
                                    </dependencies>
                                    <tags>
                                        <tag>
                                            <tag>archiving</tag>
                                        </tag>
                                        <tag>
                                            <tag>backup</tag>
                                            <value>{#NAME}-{#TYPE}</value>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},wal,min]</name>
                            <type>TRAP</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},wal,min]</key>
                            <delay>0</delay>
                            <history>15d</history>
                            <trends>0</trends>
                            <status>DISABLED</status>
                            <value_type>CHAR</value_type>
                            <description>Oldest archived log in repo available, only enabled for full (discovery override)</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.[?(@.name==&quot;{#NAME}&quot; &amp;&amp; @.type==&quot;{#TYPE}&quot; &amp;&amp; @.tenant==&quot;{#TENANT}&quot;)].min.first()</params>
                                    <error_handler>DISCARD_VALUE</error_handler>
                                </step>
                                <step>
                                    <type>DISCARD_UNCHANGED</type>
                                    <params/>
                                </step>
                            </preprocessing>
                        </item_prototype>
                        <item_prototype>
                            <name>pgbackrest[{#TENANT},{#NAME},{#TYPE},wspeed]</name>
                            <type>CALCULATED</type>
                            <key>pgbackrest[{#TENANT},{#NAME},{#TYPE},wspeed]</key>
                            <delay>1h</delay>
                            <history>8d</history>
                            <value_type>FLOAT</value_type>
                            <units>Bps</units>
                            <params>last(&quot;pgbackrest[{#TENANT},{#NAME},{#TYPE},repo,delta]&quot;,0) /&#13;
 (last(&quot;pgbackrest[{#TENANT},{#NAME},{#TYPE},stop]&quot;,0)-last(&quot;pgbackrest[{#TENANT},{#NAME},{#TYPE},start]&quot;,0))</params>
                            <description>write speed for the backup piece</description>
                            <applications>
                                <application>
                                    <name>backup</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>DISCARD_UNCHANGED_HEARTBEAT</type>
                                    <params>1d</params>
                                </step>
                            </preprocessing>
                        </item_prototype>
                    </item_prototypes>
                    <master_item>
                        <key>pgbackrest.json</key>
                    </master_item>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#NAME}</lld_macro>
                            <path>$.name</path>
                        </lld_macro_path>
                        <lld_macro_path>
                            <lld_macro>{#TENANT}</lld_macro>
                            <path>$.tenant</path>
                        </lld_macro_path>
                        <lld_macro_path>
                            <lld_macro>{#TYPE}</lld_macro>
                            <path>$.type</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                    <overrides>
                        <override>
                            <name>arl tracking only for full</name>
                            <step>1</step>
                            <filter>
                                <conditions>
                                    <condition>
                                        <macro>{#TYPE}</macro>
                                        <value>full</value>
                                        <formulaid>A</formulaid>
                                    </condition>
                                </conditions>
                            </filter>
                            <operations>
                                <operation>
                                    <operationobject>ITEM_PROTOTYPE</operationobject>
                                    <operator>LIKE</operator>
                                    <value>,full,wal,</value>
                                    <status>ENABLED</status>
                                </operation>
                                <operation>
                                    <operationobject>TRIGGER_PROTOTYPE</operationobject>
                                    <operator>LIKE</operator>
                                    <value>,wal,</value>
                                    <status>ENABLED</status>
                                </operation>
                            </operations>
                        </override>
                    </overrides>
                </discovery_rule>
            </discovery_rules>
            <tags>
                <tag>
                    <tag>app</tag>
                    <value>pgbackrest</value>
                </tag>
            </tags>
            <macros>
                <macro>
                    <macro>{$ARCHIVER_LATE}</macro>
                    <value>1d</value>
                    <description>warn if archives are not received after this</description>
                </macro>
                <macro>
                    <macro>{$MAX_BKUP_AGE}</macro>
                    <value>8d</value>
                    <description>7d but prefer not to trigger during a large backup</description>
                </macro>
                <macro>
                    <macro>{$MAX_BKUP_AGE:incr}</macro>
                    <value>50h</value>
                    <description>1d but prefer not to trigger during a large backup</description>
                </macro>
            </macros>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>pgbackrest_status</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>OK</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>ERROR</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
